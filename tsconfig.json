{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "auth-backup/auth.controller.ts",
    "auth-backup/auth.module.ts",
    "auth-backup/auth.service.ts",
    "auth-backup/csrf.controller.ts",
    "auth-backup/csrf.guard.ts",
    "auth-backup/jwt.strategy.ts",
    "auth-backup/login.dto.ts",
    "auth-backup/roles.decorator.ts",
    "auth-backup/user.decorator.ts",
    "auth-backup/jwt-auth.guard.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
